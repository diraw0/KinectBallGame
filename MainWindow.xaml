<Window x:Class="KinectAssist360.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kinect Pataditas"
        Height="600"
        Width="1000"
        Background="White"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="8">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">

            <Canvas x:Name="GameCanvas" Width="640" Height="480">
                <Image x:Name="GameImage" Width="640" Height="480" Stretch="Fill"/>
            </Canvas>


            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Label x:Name="ScoreLabel" Content="Score: 0" Foreground="Black" FontSize="18" FontWeight="Bold" Margin="10,0"/>
                <Button x:Name="btnReset" Content="Reset" Width="80" Margin="10,0" Background="#c9211e" Foreground="White"/>
                <Label x:Name="lblAngle" Content="Tilt: 0Â°" Foreground="Black" FontSize="16" Margin="20,0"/>
            </StackPanel>


            <Label x:Name="StatusLabel" Content="Estado: -" Foreground="Black" Margin="0,10,0,0" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
